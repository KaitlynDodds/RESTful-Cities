<% include partials/header %>

<form class="" action="/cities/<%= city._id %>?_method=PUT" method="POST">

	<h2 class="display-4">Edit City: <span class="text-muted"><%= city.name %></span></h2>	

	<div class="form-group">
		<label>Name</label>
  		<input class="form-control" type="text" name="city[name]" value="<%= city.name %>">
	</div>

	<div class="form-group">
  		<label>State</label>
  		<input class="form-control" type="text" name="city[state]" value="<%= city.state %>">
	</div>

	<div class="form-group">
		<label>Population</label>
  		<input class="form-control" type="number" name="city[population]" value="<%= city.population %>">
	</div>

	<div class="form-group">
  		<label>Image Url</label>
  		<input class="form-control" type="text" name="city[image]" value="<%= city.image %>">	
	</div>

  	<input class="btn btn-primary" type="submit">
</form>

<% include partials/footer %>
