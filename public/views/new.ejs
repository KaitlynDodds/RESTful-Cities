<% include partials/header %>

<form class="" action="/cities" method="post">

	<h2 class="display-4">New City</h2>

	<div class="form-group">
		<label>Name</label>
  		<input class="form-control" type="text" name="city[name]" placeholder="Name">
	</div>

	<div class="form-group">
  		<label>State</label>
  		<input class="form-control" type="text" name="city[state]" placeholder="State">
	</div>

	<div class="form-group">
		<label>Population</label>
  		<input class="form-control" type="number" name="city[population]" placeholder="Population">
	</div>

	<div class="form-group">
  		<label>Image Url</label>
  		<input class="form-control" type="text" name="city[image]" placeholder="Image URL">	
	</div>

  	<input class="btn btn-primary" type="submit">
</form>

<% include partials/footer %>
